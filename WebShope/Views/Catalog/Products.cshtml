@model List<WebShope.Domain.Entityes.Product>

<link rel="stylesheet" href="~/lib//Style/Catalog/Product.css" />

<div class="products">
    @foreach(var product in Model)
    {
        <div class="catalog-item">
            <div class="product-wrap">
                <div class="product-item">
                    <img src= @product.ImageUrl>
                    <div class="product-buttons">
                    <a onclick="PutItemInToBucket('@product.Id', '@product.Name', '@product.Price', '@product.ImageUrl' )" class="button" >В корзину</a>
                    </div>
                </div>
                <div class="product-title">
                    <a href="">@product.Name</a>
                    <span class="product-price">@String.Format("{0:c0}", product.Price)</span>
                </div>
            </div>
            <div class="products-description">
                <label>@product.Description</label>
            </div>
        </div>
    }
</div>
<script src="~/Scripts/Bucket.js"></script>
