@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebShope.Models.UserRegisterViewModel

<html> 
    <head>
    <style>
        .input-validation-error {
            border-color: red;
        }
    </style>
    </head>
    <body>
    <form method="post" asp-action="Register" asp-controller="Home">
        <p>
            <label>Логин</label>
                <br/>
            <input asp-for="Login" />
        </p>
        <p>
            <label> Имя</label>
                    <br />
                    <input asp-for="Name" />
        </p>
        <p>
            <label> Фамилия</label>
                    <br />
                    <input asp-for="Surname" />
        </p>
         <p>
            <label> Возраст</label>
                    <br />
                    <input type="number" asp-for="Age" />
        </p>
        <p>
            <label> Email</label>
                    <br />
                    <input asp-for="Email" />
        </p>
        <p>
            <label>Пароль</label>
                    <br/>
            <input asp-for="Password" />
        </p>
         <p>
            <label>Подтверждение пароля</label>
                    <br/>
            <input asp-for="RepeatPassword" />
        </p>

        <p>
            <input type="submit" value="Зарегистрироваться" />
        </p>
    </form>
    </body>
</html>

@{
}
